
/* Copy buttons & toast */
.copybtn{ margin-left:10px; padding:6px 8px; border-radius:6px; border:1px solid #1f2937; background:#0b1220; color:#e5e7eb; cursor:pointer }
.copybtn:hover{ background:#111b33 }
#toast{ position:fixed; bottom:18px; right:18px; background:#111827; color:#e5e7eb; padding:10px 14px; border:1px solid #1f2937; border-radius:8px; opacity:0; transform: translateY(8px); transition: all .2s ease; z-index:9999; }
#toast.show{ opacity:1; transform: translateY(0); }
